#!/usr/bin/env bash

source include

normal_build() {
    msg "Normal build with documentation."
    stack build "${flags[@]}" || exit 1
}

profile_build() {
    msg "Profile build."
    stack build "${flags[@]}" --profile --work-dir .stack-work-profiling || exit 1
}

test_build() {
    source include
    msg "EvoMod test suite."
    stack build "${flags[@]}" --test --work-dir .stack-work-testing || exit 1
}

if [[ -z $1 ]]
then
    echo "Usage: ./build (fast|prod|prof|test)"
    exit 1
elif [[ $1 == "fast" ]]
then
    flags=(--fast --haddock --test)
    normal_build
elif [[ $1 == "prod" ]]
then
    stack clean --full
    flags=(--haddock --test)
    normal_build
elif [[ $1 == "prof" ]]
then
    flags=()
    profile_build
elif [[ $1 == "test" ]]
then
    flags=(--fast)
    test_build
fi
